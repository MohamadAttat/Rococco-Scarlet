block header-config
	- var Current_page = 'Home'

.header-sidebar
	.menu-content.st-menu.st-effect-1#menu-1
		.swin-trigger-effects
			button.btn-close.btn-close-white.st-btn-efect
		.search-form.search-layout-01
			form(action="#")
				.input-group
					input.form-control.search-input(type='text', placeholder='Search')
					.input-group-text
						i.fa.fa-search
		.header-logo
			a.logo.logo-static(href='index.html')
				img.logo-img(src='assets/images/logo-white.png', alt='fooday')

		nav#main-nav-offcanvas.main-nav-wrapper
			.main-nav
				ul#main-nav.nav.nav-pills
					li.nav-item(class=(Current_page == 'Home' ? 'current-menu-item' : ''))
						a.nav-link(href='#')
							| Home
					li.nav-item(class=(Current_page == 'About' ? 'current-menu-item' : ''))
						a.nav-link(href='about.html') About
					li.nav-item(class=(Current_page == 'Reservation' ? 'current-menu-item' : ''))
						a.nav-link(href='reservation.html') Reservation
					li.nav-item(class=(Current_parent == 'menu' ? 'current-menu-item' : ''))
						a.nav-link(href='menu-grid-1.html') Menu
					li.nav-item(class=(Current_parent == 'blogs' ? 'current-menu-item' : ''))
						a.nav-link(href='blogs.html') Blogs
					li.nav-item(class=(Current_page == 'Contact' ? 'current-menu-item' : ''))
						a.nav-link(href='contact.html') Contact
		ul.socials.socials-about.list-unstyled.list-inline
			li.list-inline-item
				a(href='#')
					i.fa.fa-facebook
			li.list-inline-item
				a(href='#')
					i.fa.fa-twitter
			li.list-inline-item
				a(href='#')
					i.fa.fa-pinterest
			li.list-inline-item
				a(href='#')
					i.fa.fa-google-plus
header.header-transparent.header-sidebar-menu
	.header-main
		#st-trigger-effects.swin-trigger-effects.btn-open
			button.st-btn-efect(data-effect='st-effect-1') &#9776;